{
    "openapi": "3.0.3",
    "info": {
      "title": "Employee Management API",
      "version": "1.0.0",
      "description": "API do zarządzania danymi pracowników z pełnymi operacjami CRUD"
    },
    "paths": {
      "/": {
        "get": {
          "summary": "Pobierz listę wszystkich pracowników",
          "responses": {
            "200": {
              "description": "Lista pracowników zwrócona pomyślnie",
              "content": {
                "application/json": {
                  "example": [
                    {
                      "id": 1,
                      "imie": "Anna",
                      "nazwisko": "Nowak",
                      "pesel": "90010112345",
                      "email": "anna.nowak@example.com",
                      "telefon": "600000000",
                      "adres": "Warszawa ul. Kwiatowa 10/2",
                      "stanowisko": "HR Manager",
                      "pensja_brutto": 8500.0,
                      "data_urodzenia": "1990-01-01"
                    },
                    {
                      "id": 2,
                      "imie": "Jan",
                      "nazwisko": "Kowalski",
                      "pesel": "88020254321",
                      "email": "jan.kowalski@example.com",
                      "telefon": "601111111",
                      "adres": "Kraków ul. Słoneczna 12",
                      "stanowisko": "Software Developer",
                      "pensja_brutto": 12000.0,
                      "data_urodzenia": "1988-02-02"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "/employee/": {
        "post": {
          "summary": "Dodaj nowego pracownika",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "imie": { "type": "string" },
                    "nazwisko": { "type": "string" },
                    "pesel": { "type": "string" },
                    "email": { "type": "string" },
                    "telefon": { "type": "string" },
                    "adres": { "type": "string" },
                    "stanowisko": { "type": "string" },
                    "pensja_brutto": { "type": "number" },
                    "data_urodzenia": { "type": "string", "format": "date" }
                  },
                  "required": [
                    "imie",
                    "nazwisko",
                    "pesel",
                    "email",
                    "telefon",
                    "adres",
                    "stanowisko",
                    "pensja_brutto",
                    "data_urodzenia"
                  ]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Pracownik został pomyślnie dodany",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Employee created successfully",
                    "id": 3
                  }
                }
              }
            },
            "400": {
              "description": "Błąd walidacji danych",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Validation error: missing or invalid fields"
                  }
                }
              }
            }
          }
        }
      },
      "/employee/{employee_id}": {
        "post": {
          "summary": "Aktualizuj dane pracownika",
          "parameters": [
            {
              "name": "employee_id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "imie": { "type": "string" },
                    "nazwisko": { "type": "string" },
                    "pesel": { "type": "string" },
                    "email": { "type": "string" },
                    "telefon": { "type": "string" },
                    "adres": { "type": "string" },
                    "stanowisko": { "type": "string" },
                    "pensja_brutto": { "type": "number" },
                    "data_urodzenia": { "type": "string", "format": "date" }
                  },
                  "required": [
                    "imie",
                    "nazwisko",
                    "pesel",
                    "email",
                    "telefon",
                    "adres",
                    "stanowisko",
                    "pensja_brutto",
                    "data_urodzenia"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Dane pracownika zostały pomyślnie zaktualizowane",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Employee updated successfully"
                  }
                }
              }
            },
            "404": {
              "description": "Pracownik nie został znaleziony",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Employee not found"
                  }
                }
              }
            },
            "400": {
              "description": "Błąd walidacji danych",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Validation error: missing or invalid fields"
                  }
                }
              }
            }
          }
        },
        "get": {
          "summary": "Pobierz dane pracownika po ID",
          "parameters": [
            {
              "name": "employee_id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            }
          ],
          "responses": {
            "200": {
              "description": "Dane pracownika zwrócone pomyślnie",
              "content": {
                "application/json": {
                  "example": {
                    "id": 1,
                    "imie": "Anna",
                    "nazwisko": "Nowak",
                    "pesel": "90010112345",
                    "email": "anna.nowak@example.com",
                    "telefon": "600000000",
                    "adres": "Warszawa ul. Kwiatowa 10/2",
                    "stanowisko": "HR Manager",
                    "pensja_brutto": 8500.0,
                    "data_urodzenia": "1990-01-01"
                  }
                }
              }
            },
            "404": {
              "description": "Pracownik nie znaleziony",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Employee not found"
                  }
                }
              }
            }
          }
        }
      },
      "/delete/{employee_id}": {
        "get": {
          "summary": "Usuń pracownika",
          "parameters": [
            {
              "name": "employee_id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            }
          ],
          "responses": {
            "200": {
              "description": "Pracownik został usunięty pomyślnie",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Employee deleted successfully"
                  }
                }
              }
            },
            "404": {
              "description": "Pracownik nie został znaleziony",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Employee not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  